<?xml version="1.0" encoding="utf-8" ?>
<ContentPage x:Class="MandelbrotMAUI.MainPage_Image"
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <ScrollView x:Name="MainScrollView">
        <Grid>
            <Image x:Name="MandelbrotImage" 
                   BackgroundColor="Black"
                   Aspect="AspectFit"
                   HorizontalOptions="Center"
                   VerticalOptions="Center" />
            
            <StackLayout HorizontalOptions="Start" 
                         VerticalOptions="Start" 
                         BackgroundColor="Black" 
                         Opacity="0.8" 
                         Padding="10">
                <Label x:Name="InfoLabel" 
                       Text="Mandelbrot Set Visualization" 
                       TextColor="White" 
                       FontSize="12" />
                <Label x:Name="StatusLabel" 
                       Text="Initializing..." 
                       TextColor="White" 
                       FontSize="10" />
                <Label Text="Controls: Left-click=Zoom In, Right-click=Zoom Out, Double-click=4x Zoom, Drag=Pan" 
                       TextColor="LightGray" 
                       FontSize="8" />
                <Label Text="High-resolution boundary details with adaptive iterations" 
                       TextColor="Yellow" 
                       FontSize="8" />
                <Label Text="Fixed coordinate calculation for accurate zoom/pan" 
                       TextColor="Cyan" 
                       FontSize="8" />
            </StackLayout>
        </Grid>
    </ScrollView>

</ContentPage>
