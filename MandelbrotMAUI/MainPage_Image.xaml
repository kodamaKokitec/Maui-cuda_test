<?xml version="1.0" encoding="utf-8" ?>
<ContentPage x:Class="MandelbrotMAUI.MainPage_Image"
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             Title="CUDA Mandelbrot Set">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        
        <!-- メイン画像表示エリア -->
        <ScrollView x:Name="MainScrollView" Grid.Row="0" HorizontalScrollBarVisibility="Always" VerticalScrollBarVisibility="Always">
            <Image x:Name="MandelbrotImage" 
                   BackgroundColor="Black"
                   Aspect="AspectFit"
                   HorizontalOptions="Fill"
                   VerticalOptions="Fill"
                   MinimumHeightRequest="800"
                   MinimumWidthRequest="800" />
        </ScrollView>
        
        <!-- 情報パネル -->
        <Grid Grid.Row="1" BackgroundColor="Black" Padding="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>            <StackLayout Grid.Column="0" Orientation="Vertical">
                <Label x:Name="InfoLabel" 
                       Text="Mandelbrot Set Visualization" 
                       TextColor="White" 
                       FontSize="14" 
                       FontAttributes="Bold" />
                <Label x:Name="StatusLabel" 
                       Text="Initializing..." 
                       TextColor="Lime" 
                       FontSize="12" />
                <Label x:Name="CoordinateLabel" 
                       Text="Center: (-0.5, 0.0), Zoom: 1.0x" 
                       TextColor="Cyan" 
                       FontSize="11" />
            </StackLayout>
            
            <StackLayout Grid.Column="1" Orientation="Vertical" HorizontalOptions="End">
                <Label Text="操作方法:" 
                       TextColor="Yellow" 
                       FontSize="12" 
                       FontAttributes="Bold" />
                <Label Text="• 左クリック: 2倍ズームイン" 
                       TextColor="LightGray" 
                       FontSize="10" />
                <Label Text="• 右クリック: 2倍ズームアウト" 
                       TextColor="LightGray" 
                       FontSize="10" />
                <Label Text="• ダブルクリック: 4倍ズームイン" 
                       TextColor="LightGray" 
                       FontSize="10" />
                <Label Text="• ドラッグ: パン移動" 
                       TextColor="LightGray" 
                       FontSize="10" />
            </StackLayout>
            
            <StackLayout Grid.Column="2" Orientation="Vertical" HorizontalOptions="End">
                <Label Text="特徴点ナビゲーション:" 
                       TextColor="Orange" 
                       FontSize="12" 
                       FontAttributes="Bold" />
                <Button x:Name="ResetViewButton" 
                        Text="全体表示"
                        BackgroundColor="DarkBlue"
                        TextColor="White"
                        FontSize="10"
                        Margin="2"
                        HeightRequest="30"
                        Clicked="OnResetViewClicked" />
                <Button x:Name="NextFeatureButton" 
                        Text="次の特徴点"
                        BackgroundColor="DarkGreen"
                        TextColor="White"
                        FontSize="10"
                        Margin="2"
                        HeightRequest="30"
                        Clicked="OnNextFeatureClicked" />
            </StackLayout>
        </Grid>
        
        <!-- オーバーレイ情報 (左上) -->
        <StackLayout Grid.Row="0" 
                     HorizontalOptions="Start" 
                     VerticalOptions="Start" 
                     BackgroundColor="Black" 
                     Opacity="0.7" 
                     Padding="8"
                     Margin="10">
            <Label x:Name="PerformanceLabel" 
                   Text="CUDA: Ready" 
                   TextColor="Lime" 
                   FontSize="10" />
            <Label x:Name="ResolutionLabel" 
                   Text="解像度: 1024x1024" 
                   TextColor="Orange" 
                   FontSize="10" />
        </StackLayout>
    </Grid>

</ContentPage>
